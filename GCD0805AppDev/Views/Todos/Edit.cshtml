@model GCD0805AppDev.ViewModels.TodoCategoriesViewModel
@{
  ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Todos", FormMethod.Post))
{
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  @Html.HiddenFor(m => m.Todo.Id)
<div class="form-group">
  <label>Description</label>
  @Html.TextBoxFor(m => m.Todo.Description, "", new { @class = "form-control" })
  @Html.ValidationMessageFor(m => m.Todo.Description, "",
    new { @class = "text-danger" }
    )
</div>
<div class="form-group">
  <label>Due Date</label>
  @Html.TextBoxFor(m => m.Todo.DueDate, "", new { @class = "form-control", type = "date" })
  @Html.ValidationMessageFor(m => m.Todo.DueDate, "",
    new { @class = "text-danger" }
  )
</div>
<div class="form-group">
  <label>Category</label>
  @Html.DropDownListFor(m => m.Todo.CategoryId,
    new SelectList(Model.Categories, "Id", "Description"),
    new { @class = "form-control" }
  )
</div>
  <button type="submit" class="btn btn-primary">Edit</button>
}