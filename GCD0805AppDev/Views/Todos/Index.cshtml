@model IEnumerable<GCD0805AppDev.Models.Todo>
@{
    ViewBag.Title = "Index";
}

<h2>My Todoes</h2>

<div class="form-group">
  @Html.ActionLink("Create a new Todo", "Create", "Todos", new { @class = "btn btn-primary" })
  @Html.ActionLink("See Stats", "Stats", "Todos", null,new { @class = "btn btn-info" })
  @Html.ActionLink("My Teams", "Belong", "Todos", null, new { @class = "btn btn-default" })
</div>

<form>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Search todo by name"/>
  </div>
  <button type="submit" class="btn btn-primary">Search</button>
</form>

  @*<ul>
      <li>Id: @Model.Id</li>
      <li>Description: @Model.Description</li>
      <li>Due Date: @Model.DueDate.ToString("d")</li>
    </ul>*@

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Description</th>
        <th scope="col">Due Date</th>
        <th scope="col">Category</th>
        <th scope="col">Action</th>

      </tr>
    </thead>
    <tbody>
      @foreach (var item in @Model)
      {
        <tr>
          <th scope="row">@item.Id</th>
          <td>@item.Description</td>
          <td>@item.DueDate.ToString("d")</td>
          <td>@item.Category.Description</td>
          <td>
            @Html.ActionLink("Delete", "Delete", "Todos", new { id = item.Id }, new { @class = "btn btn-danger" })
            @Html.ActionLink("Edit", "Edit", "Todos", new { id = item.Id }, new { @class = "btn btn-success" })
            @Html.ActionLink("Details", "Details", "Todos", new { id = item.Id }, new { @class = "btn btn-info" })
          </td>
        </tr>
      }

    </tbody>
  </table>

