@model IEnumerable<GCD0805AppDev.Models.Todo>
@{
    ViewBag.Title = "Index";
}

<h2>My Todoes</h2>

<div class="form-group">
  @Html.ActionLink("Create a new Todo", "Create","Todos", new { @class = "btn btn-primary" })
</div>



<form>
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Search todo by name"/>
  </div>
  <button type="submit" class="btn btn-primary">Search</button>
</form>


  @*<ul>
      <li>Id: @Model.Id</li>
      <li>Description: @Model.Description</li>
      <li>Due Date: @Model.DueDate.ToString("d")</li>
    </ul>*@

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Description</th>
        <th scope="col">Due Date</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in @Model)
      {
        <tr>
          <th scope="row">@item.Id</th>
          <td>@item.Description</td>
          <td>@item.DueDate.ToString("d")</td>
          <td>
            @Html.ActionLink("Delete", "Delete", "Todos", new { id = item.Id} ,new {@class="btn btn-danger"})
            <a href="#" class="btn btn-success">Edit</a>
            <a href="#" class="btn btn-info">Details</a>
          </td>
        </tr>
      }

    </tbody>
  </table>

